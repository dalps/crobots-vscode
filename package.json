{
  "name": "crobots-vscode",
  "description": "Editor language services for CROBOTS programs.",
  "version": "0.0.0",
  "publisher": "dalps",
  "license": "GPL-3.0-only",
  "engines": {
    "vscode": "^1.73.0"
  },
  "icon": "assets/icon.png",
  "repository": {
    "url": "https://github.com/dalps/crobots-vscode"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.helloWorld",
        "title": "Echo \"Hello World\""
      }
    ],
    "languages": [
      {
        "id": "crobots",
        "aliases": [
          "CROBOTS"
        ],
        "extensions": [
          ".r"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "just build",
    "lint": "eslint",
    "watch": "just watch"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.106.0",
    "esbuild": "^0.27.0",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "chevrotain": "^11.0.3"
  }
}
