{
  "name": "crobots-vscode",
  "description": "CROBOTS language support for Visual Studio Code.",
  "version": "0.0.20",
  "publisher": "dalps",
  "license": "GPL-3.0-only",
  "engines": {
    "vscode": "^1.73.0"
  },
  "repository": {
    "url": "https://github.com/dalps/crobots-vscode"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:crobots"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.runRobot",
        "title": "Crobots: Run robot"
      },
      {
        "command": "extension.showASTRanges",
        "title": "Crobots: Highlight parsed statements"
      },
      {
        "command": "extension.openManual",
        "title": "Crobots: Open manual"
      }
    ],
    "languages": [
      {
        "id": "crobots",
        "icon": {
          "light": "./icons/icon-light.svg",
          "dark": "./icons/icon-dark.svg"
        },
        "aliases": [
          "CROBOTS",
          "Crobots"
        ],
        "extensions": [
          ".r",
          ".ro",
          ".robot",
          ".bot"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "crobots",
        "scopeName": "source.crobots",
        "path": "./syntaxes/crobots.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "just bundle",
    "build": "just bundle",
    "debug": "just build",
    "lint": "eslint",
    "watch": "just watch"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.73.0",
    "esbuild": "^0.27.0",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "chevrotain": "^11.0.3"
  }
}